APP_NAME=NR-CSR
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack

# --- Database defaults for local Docker development ---
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=nrcsr_prod
DB_USERNAME=nrcsr_user
DB_PASSWORD=nrcsr_dev
DB_SCHEMA=nr_csr

# Used by docker-compose postgres service
POSTGRES_DB=nrcsr_prod
POSTGRES_USER=nrcsr_user
POSTGRES_PASSWORD=nrcsr_dev

# Required for user creation/seeding flows that need an initial password.
# Keep this non-empty in local to avoid flow failures.
DEFAULT_USER_PASSWORD=admin123

# Optional session settings (used by docker-compose app service)
SESSION_DRIVER=file
SESSION_LIFETIME=120

# LDAP fallback login toggle
AUTH_LDAP_ENABLED=false
# AUTH_LDAP_DOMAIN=pertamina\\
# AUTH_LDAP_HOST=10.129.1.4
# AUTH_LDAP_PORT=389

# If you don't need these for local, you can leave them blank
NOCAPTCHA_SITEKEY=
NOCAPTCHA_SECRET=

# --- Health transport probe rollout controls (safe defaults for local/dev/CI) ---
HEALTH_PROBE_ALLOWED_ENVIRONMENTS=production
HEALTH_PROBE_ALLOW_NON_PRODUCTION=false
HEALTH_PROBE_ALLOW_IN_CI=false
HEALTH_PROBE_TIMEOUT_SECONDS=2
HEALTH_PROBE_TIMEOUT_MIN_SECONDS=0.2
HEALTH_PROBE_TIMEOUT_MAX_SECONDS=5
HEALTH_SMTP_TRANSPORT_PROBE=false
HEALTH_SQS_TRANSPORT_PROBE=false
HEALTH_BEANSTALK_TRANSPORT_PROBE=false

# --- Legacy dataReceiver adapter decommission controls ---
# phase1: enabled + warning telemetry, phase2: disabled + deterministic error response
LEGACY_DATA_RECEIVER_OPTIONS_ENABLED=true
LEGACY_DATA_RECEIVER_OPTIONS_PHASE=phase1
LEGACY_DATA_RECEIVER_OPTIONS_DISABLED_STATUS=410
# LEGACY_DATA_RECEIVER_OPTIONS_SUNSET_DATE=Tue, 30 Jun 2026 23:59:59 GMT


